{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "requestGPU": {
      "type": "boolean",
      "title": "Request GPU",
      "form": true
    },
    "ceph": {
      "type": "object",
      "form": true,
      "properties": {
        "key": {
          "type": "string",
          "title": "key",
          "form": true
        },
        "user": {
          "type": "string",
          "title": "user",
          "form": true
        }
      }
    }, 
    "dataset": {
      "type": "object",
      "form": true,
      "properties": {
        "id": {
          "type": "string",
          "title": "id",
          "form": true
        },
        "gid_list": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "title": "gid_list",
          "form": true
        },
        "mount_point": {
          "type": "string",
          "title": "mount_point",
          "form": false
        }
      }
    },
    "user": {
      "type": "object",
      "form": true,
      "properties": {
        "username": {
          "type": "string",
          "title": "username",
          "form": true
        },
        "password": {
          "type": "string",
          "title": "password",
          "form": true
        },
        "uid": {
          "type": "integer",
          "title": "uid",
          "form": false
        },
        "gid": {
          "type": "integer",
          "title": "gid",
          "form": false
        }
      }
    },
    "persistentUserDataVolume": {
      "type": "string",
      "title": "Persistent user data volume:",
      "form": true
    },
    "guacamoleConnectionCreation": {
      "type": "object",
      "form": false,
      "title": "Guacamole connection creation",
      "properties": {
        "guacamoleUserSecretName": {
          "type": "string",
          "form": false,
          "title": "Secret name:",
          "hidden": {
            "value": false,
            "path": "guacamoleConnectionCreation/enabled"
          }
        }
      }
    }
  },
  "required": ["persistentUserDataVolume"]
}
